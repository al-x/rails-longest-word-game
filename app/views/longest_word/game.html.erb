<h1>Longest Word</h1>
<h2>Here is your grid:</h2>
<%= @grid.join(' ') %>

<form action="/score" method="get">
  <input type="text" name="attempt">
  <%= hidden_field_tag 'grid', @grid %>
  <%= hidden_field_tag 'start_time', @start_time %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit">
</form>

<%= link_to 'Start over!', game_path %>
